<div>
  <div>
    <div>ログイン</div>
    <div>
      <div>
        <% if @error_message %>
          <div>
            <%= @error_message %>
          </div>
        <% end %>

        <%= form_tag("/login") do %>
          <p>メールアドレス</p>
          <input name="email" value="<%= @email %>">
          <p>パスワード</p>
          <input type="password" name="password" value="<%= @password %>">
          <input type="submit" value="ログイン">
        <% end %>
      </div>
    </div>
  </div>
</div>
