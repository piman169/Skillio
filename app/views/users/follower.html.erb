<h3><%= @user.name %>のfollower一覧 <%= @user.followers.count %>人</h3>
<% @user.followers.each do |user| %>
  <div class="flex">
    <div><img class="user-icon" src="<%= "/user_images/#{user.image_name}" %>"></div>
    <div>
      <%= link_to(user.name, "/users/#{user.id}",{class: "user-text"}) %> 
      <br>follower:<%= user.followers.count %>人
      <br>作品数:<%= user.posts.count %>
    </div>
    <% unless @current_user.id == user.id %>
      <div class="f-btn"><%= render "relationships/follow_button", user: user %></div>
    <% end %>
  </div>
  <hr>
<% end %>